{
  "name": "socketio-realtime-communication",
  "version": "1.0.0",
  "description": "An Express + Socket.IO project for real-time communication with TypeScript, Rollup, and code quality tools",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"nodemon --watch dist dist/index.js\"",
    "dev:build": "tsc --watch",
    "dev:server": "nodemon --watch dist dist/index.js",
    "build": "tsc",
    "build:prod": "tsc",
    "start": "node dist/index.js",
    "start:dev": "npm run build && npm run start",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "socket.io",
    "express",
    "websocket",
    "real-time",
    "typescript",
    "rollup",
    "communication"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
